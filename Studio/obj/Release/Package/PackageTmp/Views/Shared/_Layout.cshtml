<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Mi aplicación ASP.NET MVC</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/Mustaje")
    <!--JQuery Fallback-->
    <script>window.jQuery || document.write('<script src="/Scripts/jquery-2.0.3.min.js">x3C/script>')</script>
    @Styles.Render("~/bundles/bootstrapcss")
    @Scripts.Render("~/bundles/bootstrapjs")
    @Scripts.Render("~/bundles/Plugin")
    @Scripts.Render("~/Content/themes/base/css")
</head>
<body>
    <!-- Sidebar -->
    <div id="wrapper">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">Rascador</a>
            </div>
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                @Html.Partial("_MenuBar")
                @Html.Partial("_MenuTop")
            </div>
        </nav>

        <!-- /#wrapper -->
        <div id="page-wrapper">
                @RenderSection("featured", required: false)
                @RenderBody()
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("active");
    });
    </script>